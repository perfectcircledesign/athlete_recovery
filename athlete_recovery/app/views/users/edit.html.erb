          <div class="field">
              <%= f.label :id_number %><br />
              <%= f.text_field :id_number %>
          </div>
          <div class="field">
              <%= f.label :email %><br />
              <%= f.text_field :email %>
          </div>
          <div class="field">
              <%= f.label :phone %><br />
              <%= f.text_field :phone %>
          </div>
          <div class="field">
              <%= f.label :resting_heart_rate %><br />
              <%= f.number_field :resting_heart_rate %>
          </div>
          <div class="field">
              <%= f.label :blood_gas_test %><br />
