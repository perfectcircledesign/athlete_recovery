
<div class="text-center">
<div class="banner">
</div>

<div class="about">
    <h1>About</h1>
    <p><%= @about%></p>
</div>
<%= form_for([@user, eval("@#{controller_name.singularize}")]) do |f| %>
<% if eval("@#{controller_name.singularize}").errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(eval("@#{controller_name.singularize}").errors.count, "error") %> prohibited this estimate_element from being saved:</h2>

      <ul>
        <% eval("@#{controller_name.singularize}").errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>


    <div class="sign-up-form">
        <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name %>
        </div>
        <div class="field">
            <%= f.label :surname %><br />
            <%= f.text_field :surname %>
        </div>
        <div class="field">
            <%= f.label :id_number %><br />
            <%= f.text_field :id_number %>
        </div>
        <div class="field">
            <%= f.label :email %><br />
            <%= f.text_field :email %>
        </div>
        <div class="field">
            <%= f.label :phone %><br />
            <%= f.text_field :phone %>
        </div>
        <div class="field">
            <%= f.label :resting_heart_rate %><br />
            <%= f.number_field :resting_heart_rate %>
        </div>
        <div class="field">
            <%= f.label :blood_gas_test %><br />
            <%= f.check_box :blood_gas_test %>
        </div>
        <div class="actions">
            <%= f.submit %>
        </div>
    </div>
   
<% end %>
 </div>