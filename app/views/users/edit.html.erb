
<div class="form" style="margin-top: 150px;">
  <div class="container">
    <div class="row">
      <%= form_for(@user) do |f| %>
          <% if @user.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

                <ul>
                  <% @user.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>
          <div class="col-xs-12 col-sm-6 col-sm-offset-3">
            <div class="form-box">
              <h1>EDIT USER</h1>
              <label>Name:</label>
              <%= f.text_field :name %>
              <label>Surname:</label>
              <%= f.text_field :surname%>
              <label>ID Number:</label>
              <%= f.text_field :id_number %>
              <label>Email:</label>
              <%= f.text_field :email %>
              <label>Phone:</label>
              <%= f.text_field :phone %>
              <label>Resting Heart Rate:</label><br>
              <%= f.number_field :resting_heart_rate, :style => "border: none; border-bottom: 1px solid #b7b7b7;margin-bottom: 30px;padding: 5px;" %>
              <br>

              <%= f.submit "Save", :class=> "button"%>
              <%= link_to "Back", admin_path , :class=> "btn"%>
            </div>
          </div>
      <%end%>
    </div>
  </div>
</div>